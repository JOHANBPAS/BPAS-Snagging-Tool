rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Projects: Allow all authenticated users to read/create
    // Update/Delete could be restricted to creator but for now trusted team access
    match /projects/{projectId} {
      allow read, write: if isAuthenticated();
      
      // Subcollections (snags, plans)
      match /{document=**} {
        allow read, write: if isAuthenticated();
      }
    }

    // Reports
    match /project_reports/{reportId} {
      allow read, write: if isAuthenticated();
    }
    
    // Profiles (invite-only)
    match /profiles/{userId} {
      allow read: if request.auth.uid == userId || request.auth.token.admin == true;
      allow update, delete: if request.auth.uid == userId;

      // Require invite to create profile
      allow create: if request.auth != null &&
        exists(/databases/$(database)/documents/invites/$(request.auth.token.email));
    }

    // Invites
    match /invites/{inviteId} {
      allow read: if true;
      allow create, delete: if request.auth.token.admin == true;
      allow update: if request.auth.token.admin == true || (
        request.auth != null &&
        resource.data.email == request.auth.token.email &&
        resource.data.status == 'pending' &&
        request.resource.data.status == 'accepted'
      );
    }
    
    // Collection Group query for snags
    match /{path=**}/snags/{snagId} {
      allow read: if isAuthenticated();
    }
  }
}
